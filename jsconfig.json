{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    // --- point to node_modules ---
    "baseUrl": ".",
    "paths": {
      "*": ["./.dev/node_modules/*"]
    }
    // -----------------------------
  },
  "include": [
    "globals.d.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".dev/node_modules"
  ]
}
